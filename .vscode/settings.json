// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "**/*.js": {"when": "$(basename).ts"},
    "**/*.d.ts": {"when": "$(basename).ts"},
    "**/*.js.map": true,
    "**/npm-debug.log": true
  },

  "typescript.tsdk": "node_modules/typescript/lib",

  "tslint.autoFixOnSave": true,
  "tslint.exclude": "**/test/**/*.ts"
}
